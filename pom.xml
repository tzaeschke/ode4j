<!--								<id>base-compile</id>-->
<!--								<goals>-->
<!--									<goal>compile</goal>-->
<!--								</goals>-->

<!--								&lt;!&ndash; Recompile everything for the target VM except the-->
<!--										 module-info.java &ndash;&gt;-->
<!--								<configuration>-->
<!--									<excludes>-->
<!--										<exclude>module-info.java</exclude>-->
<!--									</excludes>-->
<!--									<release>8</release>-->
<!--									<source>1.8</source>-->
<!--									<target>1.8</target>-->
<!--								</configuration>-->
<!--							</execution>-->
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

</project>
